<Window x:Class="RandPicker.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        Title="关于 RandPicker" 
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="versionTextBlock"
                   Panel.ZIndex="0"
                   Grid.Row="0"
                   Text="RandPicker"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Panel.ZIndex="0"
                    VerticalAlignment="Top"
                    Margin="0,0,0,10">
            <TextBlock 
                Text="一个基于WPF的简易名称抽选器"
                FontSize="18"
                Foreground="#666666"
                HorizontalAlignment="Center"/>
            <TextBlock 
                FontSize="14"
                Foreground="#999999"
                HorizontalAlignment="Center"
                Margin="0,5,0,0">
                查看RandPicker项目:
                <Hyperlink 
                    NavigateUri="https://github.com/demonbro-dev/RandPicker"
                    RequestNavigate="Hyperlink_RequestNavigate"
                    Foreground="#63B8FF">
                    <Hyperlink.ToolTip>
                        <TextBlock Text="在GitHub上查看" FontSize="12" FontWeight="Normal" />
                    </Hyperlink.ToolTip>
                    <InlineUIContainer>
                        <Image Source="{StaticResource github_markDrawingImage}" Margin="2,2,0,2" Width="32" Height="32"></Image>
                    </InlineUIContainer>
                </Hyperlink>
                <Hyperlink 
                    NavigateUri="https://gitee.com/demonbro-dev/RandPicker"
                    RequestNavigate="Hyperlink_RequestNavigate"
                    Foreground="#63B8FF">
                    <Hyperlink.ToolTip>
                        <TextBlock Text="在Gitee上查看" FontSize="12" FontWeight="Normal" />
                    </Hyperlink.ToolTip>
                    <InlineUIContainer>
                        <Image Source="{StaticResource gitee_svgrepo_comDrawingImage}" Margin="2,2,0,2" Width="32" Height="32"></Image>
                    </InlineUIContainer>
                </Hyperlink>
            </TextBlock>
            <TextBlock 
                Text="© Copyright 2025 HikariUrc."
                FontSize="13"
                Foreground="#AAAAAA"
                HorizontalAlignment="Center"
                Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,-150,0,0">
            <!-- 负边距隐藏初始位置 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <!-- 滑动面板高度 -->
                <RowDefinition Height="Auto"/>
                <!-- 按钮区域 -->
            </Grid.RowDefinitions>

            <!-- 许可证面板 -->
            <Border x:Name="LicensePanel"
                    Grid.Row="0"
                    Background="#FFF"
                    CornerRadius="3"
                    BorderThickness="2"
                    BorderBrush="#DDD"
                    RenderTransformOrigin="0,1"
                    Visibility="Collapsed"
                    ClipToBounds="True">
                <Border.RenderTransform>
                    <TranslateTransform Y="150"/>
                    <!-- 初始隐藏 -->
                </Border.RenderTransform>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="LicenseTextBlock" Text="PLACEHOLDER" Margin="10" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- 按钮区域（保持在最上层） -->
            <StackPanel Grid.Row="1" 
                       Panel.ZIndex="1"
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="10">
                <Button Content="确定" Width="80" Height="30" Click="CloseButton_Click"/>
                <Button x:Name="LicenseButton" 
                       Content="开放源代码许可" 
                       Width="120" Height="30" 
                       Margin="10,0,0,0" 
                       Click="LicenseButton_Click"/>
            </StackPanel>
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>