<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>RandPickerLogo.ico</ApplicationIcon>
    <Version>1.2.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="namelist.json" />
    <None Remove="RandPickerLogo.png" />
    <None Remove="Resources\gitee-svgrepo-com.svg" />
    <None Remove="Resources\github-mark.svg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="namelist.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="RandPickerLogo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HandyControl" Version="3.5.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\gitee-svgrepo-com.svg" />
    <Resource Include="Resources\github-mark.svg" />
  </ItemGroup>

</Project>
